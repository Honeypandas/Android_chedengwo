<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <ImageButton

            android:onClick="BusInfo_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/BusInfo_imageButton"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/back" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="路线"
            android:id="@+id/BusInfo_info"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:textColor="#fefefe"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:text=""
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="#372727" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="tobuslist"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="站点列表"
            android:id="@+id/button6"
            android:textSize="24dp"
            android:background="#92f9ef"
            android:layout_gravity="right"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <Button
            android:onClick="to_bus_map"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="地图上显示"
            android:id="@+id/button5"
            android:textSize="24dp"
            android:background="#28720b"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>


</LinearLayout>